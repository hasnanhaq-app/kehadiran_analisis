# Example environment variables for kehadiran-analisis
# Copy this file to `.env` and fill values (DO NOT commit real secrets).

# Local target DB where ETL results are written (sqlite example):
DATABASE_URL=sqlite:///./local.db

# Remote source DB (direct SQLAlchemy URL). Example for MySQL:
# REMOTE_DATABASE_URL=mysql+pymysql://user:password@host:3306/bkd_presensi
REMOTE_DATABASE_URL=

# SSH tunneling (if the remote DB is only accessible via SSH)
# Either set these env vars or pass via CLI (--ssh-host, --ssh-port, etc.)
SSH_HOST=
SSH_PORT=22
SSH_USER=
SSH_PASSWORD=

# Remote DB credentials (used for direct connection behind SSH tunnel)
DB_HOST=127.0.0.1
DB_PORT=3306
DB_USER=
DB_PASSWORD=
DB_NAME=bkd_presensi

# Optional: let the app create the DB on startup (development only)
# Set to 'true' to allow create_database_if_missing to run
CREATE_DB_ON_STARTUP=false
